<div class="page-header">
  <h1>
    <%= "Detail for Item ##{@item.item_serial}" %>
    <% if @item.stock != nil %>
      attached to stock item <%= link_to format_serial(@item.stock), stock_path(@item.stock) %>.
    <% end %>
    <% if @item.order != nil %>
      <%= " on order \##{@item.order.order_number}" %>
    <% end %>
  </h1>
</div>

<div class="container">
  <div class="row">
    <%= render 'item' %>
  </div>
  <div class="row">
    <div class="btn-group">
      <% if user_signed_in? %>
        <% if @item.stock != nil %>
          <%= link_to 'Assign to Floor Stock', item_path(@item), method: :unassign_item, class: "btn btn-sm btn-success" %>
          <%= link_to 'Back to Stock', stock_path(@item.stock), class: "btn btn-sm btn-primary" %>
        <% else %>
          <%= link_to 'Assign to Stock', assign_item_path(@item), class: "btn btn-sm btn-success" %>
          <%= link_to 'Back to Floor Stock', items_floor_stock_path(@item.stock), class: "btn btn-sm btn-primary" %>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="btn-group">
      <% if @item.order != nil %>
        <%= link_to "Order ##{@item.order.order_number}", @item.order, class: "btn btn-sm btn-danger" %>
      <% end %>
      <%= link_to 'Items List', items_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="btn-group">
      <%= link_to 'Edit Item', edit_item_path(@item), class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
</div>
