<div class="col-sm-3">
  <p>
    <strong>Item serial:</strong>
    <%= @item.item_serial %>
  </p>

  <p>
    <strong>Item name:</strong>
    <%= @item.item_name %>
  </p>

  <p>
    <strong>Item model:</strong>
    <%= @item.item_model %>
  </p>

  <p>
    <strong>Stock type:</strong>
    <%= @item.stock_type %>
  </p>
</div>
<div class="col-sm-3">
  <p>
    <strong>Order:</strong>
    <% if @item.order != nil %>
      <%= link_to @item.order.order_number, order_path(@item.order) %>
    <% else %>
      This item was created manually
    <% end %>
  </p>

  <p>
    <strong>Distributor:</strong>
    <%= @item.distributor %>
  </p>

  <p>
    <strong>Manufacturer:</strong>
    <%= @item.manufacturer %>
  </p>

  <p>
    <strong>Stock:</strong>
    <% if @item.stock != nil %>
      <%= link_to format_serial(@item.stock), stock_path(@item.stock) %>
    <% else %>
      Floor Stock
    <% end %>
  </p>
</div>
