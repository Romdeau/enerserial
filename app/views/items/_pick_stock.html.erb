<h3>Pick Stock Item to assign</h3><input id="filter" type="text" class="form-control" placeholder="Search For...">

<table class="table table-striped">
  <thead>
    <tr>
      <th class="ener-header">Serial#</th>
      <th class="ener-header">Job#</th>
      <th class="ener-header">Detail</th>
      <th class="ener-header">Status</th>
      <th class="ener-header">Status Detail</th>
      <th class="ener-header">Supplier Serial</th>
      <th class="ener-header"></th>
    </tr>
  </thead>
  <% @stocks.each do |stock| %>
    <tbody class="searchable">
      <tr>
        <td><%= link_to format_serial(stock), stock_path(stock) %></td>
        <td><%= link_to check_job(stock), stock.job %></td>
        <td><%= stock.detail %></td>
        <td><%= stock.status %></td>
        <td><%= stock.status_detail %></td>
        <td><%= stock.gesan_number %></td>
        <td><%= link_to 'Assign', item_stock_path(@item, stock), class: "btn btn-xs btn-info" %></td>
      </tr>
    </tbody>
  <% end %>
</table>
