<div class="page-header">
  <h1>Assign <%= @item.item_serial %> to Stock <%= @stock.serial_number%></h1>
</div>

<div class="paragraph">
  <div class="row">
    <div class="col-sm-6">
      <h3>Item <%= @item.item_serial %></h3>
    </div>
    <div class"col-sm-6">
      <h3>Stock</h3>
    </div>
  </div>
  <div class="row">
    <%= render 'item' %>
    <%= render 'stock' %>
  </div>
  <%= form_for @item, :url => {:action => 'process_item_stock'} do |f| %>
  <div class="actions">
    <%= f.submit class: "btn btn-sm btn-success" %>
  </div>
  <% end %>
</div>
