<div class="page-header">
  <h1>Assign <%= @item.item_serial %> to Stock </h1>
</div>

<div class="content">
  <div class="row">
    <div class="col-sm-12">
    <%= render 'item' %>
    <%= form_for @item, :url => {:action => 'process_item'} do |f| %>
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% @item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <h3>Stock Serial to Assign to</h3>
      <div class="field">
        <strong>Stock Serial: </strong>
        <%= f.text_field :stock_id %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
    </div>
    <div class="col-sm-8">
      <%= render 'pick_stock' %>
    </div>
  </div>
</div>
