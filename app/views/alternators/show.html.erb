<% if @alternator.stock != nil %>
  <div class="page-header">
    <h1>Alternator Installed In: <%= link_to @alternator.stock.serial_number, stock_path(@alternator.stock) %>
      <% if @alternator.stock.job != nil %>
       for job <%= link_to @alternator.stock.job.job_number, job_path(@alternator.stock.job) %>
      <%end%>
  </div>
<% else %>
  <div class="page-header">
    <h1>Alternator in Stock</h1>
  </div>
<% end %>
<div class="content">
  <div class="paragraph">
    <%= render 'alternator' %>
  </div>
  <br>
  <div class="btn-group">
    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_alternator_path(@alternator), class: "btn btn-sm btn-primary" %>
    <% end %>
    <%= link_to 'Back', alternators_path, class: "btn btn-sm btn-primary" %>
    <% if @alternator.stock == nil and user_signed_in? %>
      <%= link_to 'Assign to Stock', assign_alternator_path(@alternator), class: "btn btn-sm btn-warning" %>
    <% end %>
  </div>
  <div class="paragraph">
    <h4>Audit Events</h4>
    <div class="row">
      <div class="col-sm-4 ener-header">Comment</div>
      <div class="col-sm-8 ener-header">Params</div>
    </div>

    <% @stock_audits.each do |stock_audit| %>
      <div class="row">
        <div class="col-sm-4"><%= format_name(stock_audit.user.email) %> <%= stock_audit.comment %></div>
        <div class="col-sm-8"><%= stock_audit.audit_params %></div>
      </div>
    <% end %>
  </div>
</div>
