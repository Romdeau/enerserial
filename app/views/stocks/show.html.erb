<div class="page-header">
  <h1><%= "Detail for Serial \##{@stock.serial_number}; Job #{format_job(@stock.job)}." %> </h1>
</div>

<div id="content">
  <div class="paragraph">
    <p>
      <strong>Serial number:</strong>
      <%= @stock.serial_number %>
    </p>

    <p>
      <strong>Job:</strong>
      <%= format_job(@stock.job) %>
    </p>

    <p>
      <strong>Engine:</strong>
      <% if @stock.engine != nil %>
        <%= @stock.engine.serial %>
      <% else %>
        No Engine Found
      <% end %>
    </p>

    <p>
      <strong>Alternator:</strong>
      <% if @stock.alternator != nil %>
        <%= @stock.alternator.serial %>
      <% else %>
        No Alternator Found
      <% end %>
    </p>

    <p>
      <strong>Detail:</strong>
      <%= @stock.detail %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @stock.status %>
    </p>

    <p>
      <strong>Status detail:</strong>
      <%= @stock.status_detail %>
    </p>

    <p>
      <strong>Gesan number:</strong>
      <%= @stock.gesan_number %>
    </p>

    <p>
      <strong>Ppsr:</strong>
      <%= @stock.ppsr %>
    </p>
    <div class="btn-group">
      <%= link_to 'Edit', edit_stock_path(@stock), class: "btn btn-sm btn-primary" %>
      <%= link_to 'Back', stocks_path, class: "btn btn-sm btn-primary" %>
    </div>
      <%= link_to 'New Engine', new_stock_engine_path(@stock), class: "btn btn-sm btn-success" %>
      <%= link_to 'New Alternator', new_stock_alternator_path(@stock), class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>
