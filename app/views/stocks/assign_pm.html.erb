<div class="page-header">
  <h1>
    <%= "Assign PM to Serial \##{@stock.serial_number}" %>
    <% if @stock.job != nil %>
      <%= ": Job #{format_job(@stock)} for #{format_company(@stock)}." %>
    <% end %>
  </h1>
</div>

  <%= form_for @stock, :url => url_for(:controller => 'stocks', :action => 'process_pm') do |f| %>
    <% if @stock.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

        <ul>
        <% @stock.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if @pm != nil %>
      <div class="field">
        <%= f.label "Project Manager Email" %><br>
        <%= f.text_field :pm_email, :value => @pm.email %>
      </div>
    <% else %>
      <div class="field">
        <%= f.label "Project Manager Email" %><br>
        <%= f.text_field :pm_email %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
