<div class="page-header">
  <h1>Edit User Role for <%=@user.email%></h1>
</div>
<div class="row">
  <div class="col-lg-6">
    <%= form_for (@user), url: {action: "update_role" }, html: {class: "form-horizontal"} do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this stock from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field form-group">
        <%= f.label :role, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <div class="form-control">
            <%= f.collection_select :role, User::USER_ROLES, :to_s, :humanize %>
          </div>
        </div>
      </div>
      <div class="actions col-sm-offset-3 col-sm-9">
        <%= f.submit class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div>
