<div class="page-header">
  <h1>Users Index</h1>
</div>

<div class="content">
  <div class="paragraph">
    <div class="row ener-header">
      <div class="col-sm-3">Email</div>
      <div class="col-sm-3"></div>
    </div>
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-sm-3"><%= user.email %></div>
        <div class="col-sm-3 btn-group">
          <% if current_user.admin? or current_user.id == 1 %>
            <%= link_to "Set Admin", set_user_admin_path(user), class: "btn btn-xs btn-info" %>
          <% end %>
      </div>
      </div>
    <% end %>
    <br>
    <div class="row">
      <div class="col-sm-12 btn-group">
        <%= link_to "Back", stocks_path, class: "btn btn-sm btn-primary" %>
        <%= link_to "create User", new_user_registration_path, class: "btn btn-sm btn-success" %>
      </div>
  </div>
  </div>
</div>
