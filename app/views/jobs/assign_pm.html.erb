<div class="page-header">
  <h1>
    <%= "Assign PM to Job #{@job.job_number} for #{@job.customer.name}." %>
  </h1>
</div>

  <%= form_for @job, :url => url_for(:controller => 'jobs', :action => 'process_pm') do |f| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this stock from being saved:</h2>
        <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if @pm != nil %>
      <div class="field">
        <%= f.label "Project Manager Email" %><br>
        <%= f.text_field :pm_email, :value => @pm.email %>
      </div>
    <% else %>
      <div class="field">
        <%= f.label "Project Manager Email" %><br>
        <%= f.text_field :pm_email %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
