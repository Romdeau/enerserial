<div class="page-header">
  <h1>Assign Job #<%= @job.job_number %> to Customer <%= @customer.name%></h1>
</div>

<div class="paragraph">
  <div class="row">
    <div class="col-sm-6">
      <h3>Job <%= @job.job_number %></h3>
    </div>
    <div class"col-sm-6">
      <h3>Customer <%= @customer.name %></h3>
    </div>
  </div>
  <%= form_for @job, :url => {:action => 'process_customer_job'} do |f| %>
  <div class="actions">
    <%= f.submit class: "btn btn-sm btn-success" %>
  </div>
  <% end %>
</div>
