<table class="table table-striped table-hover table-condensed">
  <col style="width:15%">
  <col style="width:15%">
  <col style="width:38%">
  <col style="width:15%">
  <col style="width:18%">
  <thead>
    <tr>
      <th class="ener-header">Serial</th>
      <th class="ener-header">Name</th>
      <th class="ener-header">Model</th>
      <th class="ener-header">Stock Type</th>
      <th></th>
    <tr>
  </thead>
  <tbody class="searchable">
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to format_item_serial(item), item_path(item) %></td>
        <td><%= item.item_name %></td>
        <td><%= item.item_model %></td>
        <td><%= item.stock_type %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', item, class: "btn btn-xs btn-info" %>
            <% if user_signed_in? %>
              <%= link_to 'Edit', edit_item_path(item), class: "btn btn-xs btn-info" %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
