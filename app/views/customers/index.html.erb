<div class="page-header">
  <h1>Listing customers</h1>
</div>

<div id="content">
  <div class="paragraph">
    <div class="row">
      <div class="col-sm-4">
        <input id="filter" type="text" class="form-control" placeholder="Search For...">
      </div>
    </div>
    <table class="table table-striped tablesorter" id="sorttable">
      <thead>
        <tr>
          <th class="ener-header">Name</th>
        </tr>
      </thead>
      <tbody class="searchable">
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'Show', customer, class: "btn btn-xs btn-info" %>
                <%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-xs btn-info" %>
                <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
              </div>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <br>
  <%= link_to 'New Customer', new_customer_path, class: "btn btn-sm btn-success" %>
</div>
</div>
</div>
